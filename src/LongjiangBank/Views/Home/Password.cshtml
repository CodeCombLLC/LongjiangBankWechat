@{ 
    ViewBag.Title = "修改密码";
}
<h2>@ViewBag.Title</h2>
<form asp-action="Password" asp-controller="Home" method="post">
    <table class="detail-table">
        <tr>
            <td class="row-title">旧密码</td>
            <td><input type="text" class="w-3 textbox" name="old" /></td>
        </tr>
        <tr>
            <td class="row-title">新密码</td>
            <td><input type="text" class="w-3 textbox" name="new" value="0" /></td>
        </tr>
        <tr>
            <td class="row-title">密码重复</td>
            <td><textarea name="description" class="confirm"></textarea></td>
        </tr>
    </table>
    <p>
        <input type="submit" class="btn inverse" value="修改密码" />
    </p>
</form>