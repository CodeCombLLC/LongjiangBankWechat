@{
    Layout = null;
}
@model LongjiangBank.Models.Customer
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>积分商城</title>
    <link href="~/styles/site.css" rel="stylesheet" type="text/css" />
    <link href="~/styles/icons.css" rel="stylesheet" type="text/css" />
    <script src="http://libs.baidu.com/jquery/1.9.1/jquery.min.js"></script>
    <script src="~/scripts/jquery.autoajax.js"></script>
</head>
<body>
    <div class="header">
        <table>
            <tr>
                <td style="width: 2.5em; text-align: left;padding-left: 1em;">
                    &nbsp;
                </td>
                <td style="text-align: center">完善个人信息</td>
                <td style="width: 2.5em; text-align: right;padding-right:1em;text-overflow:ellipsis;">
                    &nbsp;
                    <a href="javascript: location.reload() "><i class="fa icon fa-repeat"></i></a>
                </td>
            </tr>
        </table>
    </div>

    <form class="wrap-cont" asp-action="Full" asp-controller="Api" method="post">
        <div class="textbox-outer">
            <input type="text" name="name" placeholder="姓名" class="textbox" value="@Model.Name" />
        </div>
        <div class="textbox-outer">
            <input type="text" name="prcid" placeholder="身份证号" class="textbox" value="@Model.PRCID" />
        </div>
        <div class="textbox-outer">
            <input type="text" name="phone" placeholder="手机号码" class="textbox" value="@Model.Phone" />
        </div>
        <div class="list-outer">请确保填写的信息与银行预留一致，否则无法进行兑换积分、奖品等操作！</div>
        <a href="javascript: $('form').submit();">
            <div class="btn">保存</div>
        </a>
    </form>
</body>
</html>