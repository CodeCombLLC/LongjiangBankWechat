@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>输单号，兑积分</title>
    <style>
        body {
            background-image: url('/images/bg.jpg');
            background-size: 100%;
            margin: 0;
            padding: 0;
        }

        a {
            text-decoration: none;
        }
    </style>
    <link href="~/styles/site.css" rel="stylesheet" type="text/css" />
    <link href="~/styles/icons.css" rel="stylesheet" type="text/css" />
    <script src="http://libs.baidu.com/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div style="position: absolute; width: 100%; top: 2.2em">
        <center>
            <img src="~/images/coins.png" style="height: 180px;" />
        </center>
    </div>
    <form asp-action="Coin" asp-controller="Common" method="post" style="position: absolute; bottom:4em; width: 100%;">
        <center>
            <input name="number" id="txtNumber" type="text" style="border: 0;width: 80%;box-shadow: rgba(0,0,0,0.4) 0 0 10px; height: 1.7em; text-align:center; font-size:1.7em; line-height:1.7em;border-radius:100px;" placeholder="输入存单号或理财编号" />
            <br />
            <br />
            <input name="phone" id="txtPhone" type="text" style="border: 0;width: 80%;box-shadow: rgba(0,0,0,0.4) 0 0 10px; height: 1.7em; text-align:center; font-size:1.7em; line-height:1.7em;border-radius:100px;" placeholder="输入您的手机号码" />
            <br />
            <br />
            <a href="javascript:$('form').submit();">
                <div id="btnInner" style="border-radius: 100px; background-image:url('/images/button.png'); background-repeat:repeat-x; background-size:auto 100%; height: 2em; font-size:1.7em; line-height: 2em; text-align:center; box-shadow: rgba(0,0,0,0.4) 0 0 10px;color:#fff;text-shadow: 0 0 3px #4b0000">兑换积分</div>
            </a>
            <br />
            <span style="color:#ddd;font-size:0.6em;">定期存单输入存单号,手机银行转存定期请输入卡号+定期序号</span>
            <br />
            <span style="color:#ddd;font-size:0.6em;">理财协议输入卡号(存折号)+理财产品编号</span>
        </center>
        @Html.Partial("~/Views/Common/_TabBar.cshtml")
    </form>
    <script>
        function resize()
        {
            $('#btnInner').css('width', $('#txtNumber').outerWidth());
        }
        resize();
        $(window).resize(function () { resize(); });
    </script>
</body>
</html>
