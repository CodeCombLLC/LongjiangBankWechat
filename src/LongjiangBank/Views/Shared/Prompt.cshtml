@model Prompt
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>提示信息</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            background-color: rgb(0, 66, 126);
            color: rgb(249,190, 0);
        }

        a {
            text-decoration: none;
        }

        div {
            padding-left: 0.8em;
        }
    </style>
    <script src="http://libs.baidu.com/jquery/1.9.1/jquery.min.js"></script>
</head>
<body>
    <div style="width:100%; margin:0; height:4em; background-color: rgb(249,190, 0);color:rgb(0, 66, 126);border-bottom:0.5em solid #000; ">
        <h2 style="line-height:2.5em;">@Model.Title</h2>
    </div>
    <div style="margin: 0.8em; background-color:#fff;border-radius:1.2em; color: rgb(0, 66, 126);box-shadow: 0 0 10px rgba(0,0,0,0.4);padding: 1.2em;">@Model.Details</div>
</body>
</html>